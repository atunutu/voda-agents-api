generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agent {
  id         String   @id @default(uuid())
  name       String
  phone      String   @unique
  password   String
  region     String
  district   String
  ward       String
  status     AgentStatus @default(ACTIVE)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  registrations Customer[]
}

enum AgentStatus {
  ACTIVE
  SUSPENDED
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  dob       DateTime
  region    String
  district  String
  ward      String
  nida      String   @unique
  agentId   String
  createdAt DateTime @default(now())

  agent     Agent    @relation(fields: [agentId], references: [id])

  @@index([agentId, createdAt])
  @@index([name])
  @@index([nida])
}
